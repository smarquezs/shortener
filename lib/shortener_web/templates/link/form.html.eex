<%= form_for @changeset, Routes.link_path(@conn, :create), fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <label>
    URL: <%= text_input f, :url %>
  </label>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
